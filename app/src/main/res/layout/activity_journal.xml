<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Daily Journal"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>

        <!-- Mood Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling?"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvSelectMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Mood"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:textSize="17sp"
                android:textColor="#333333"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/moodSelectorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <GridLayout
                    android:id="@+id/moodSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:padding="8dp">

                    <TextView android:text="ðŸ¤©" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜„" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜Š" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜”" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜°" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜¡" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                    <TextView android:text="ðŸ˜´" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center" android:textSize="32sp" android:padding="12dp" android:clickable="true" android:focusable="true" android:background="?attr/selectableItemBackgroundBorderless"/>
                </GridLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <!-- Stress Level Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stress Level (1-10)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <SeekBar
                    android:id="@+id/stressSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="5"
                    android:progressTint="#6200EE"
                    android:thumbTint="#6200EE" />

                <TextView
                    android:id="@+id/tvStressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Level: 5"
                    android:textColor="#555555"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Content Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's on your mind?"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/journalEditText"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:hint="Start typing here..."
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:textSize="16sp"
                android:inputType="textMultiLine"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackMood"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:text="Show Selected Mood"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            app:elevation="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveJournalBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Save Entry"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/material_dynamic_tertiary60"
            android:textColor="@color/white"
            app:elevation="4dp"/>

    </LinearLayout>
</ScrollView>