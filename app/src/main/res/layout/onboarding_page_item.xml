<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/boarding" />

    <!-- Professional Dark Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingBottom="120dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Your Mood"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:fontFamily="sans-serif-black"/>

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/material_dynamic_tertiary60" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Understand your stress &amp; anxiety patterns easily."
            android:textSize="18sp"
            android:textColor="#F0F0F0"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:lineSpacingMultiplier="1.2"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>
</FrameLayout>
